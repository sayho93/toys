{
  "name": "toys",
  "version": "1.0.0",
  "main": "src/app.ts",
  "author": "sayho",
  "license": "MIT",
  "type": "module",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "#src/(.*)$": "<rootDir>/src/$1",
      "#bin/(.*)$": "<rootDir>/src/bin/$1",
      "#configs/(.*)$": "<rootDir>/src/configs/$1",
      "#datasources/(.*)$": "<rootDir>/src/datasources/$1",
      "#models/(.*)$": "<rootDir>/src/models/$1",
      "#repositories/(.*)$": "<rootDir>/src/repositories/$1",
      "#routes/(.*)$": "<rootDir>/src/routes/$1",
      "#controllers/(.*)$": "<rootDir>/src/controllers/$1",
      "#services/(.*)$": "<rootDir>/src/services/$1",
      "#jobs/(.*)$": "<rootDir>/src/jobs/$1",
      "#utils/(.*)$": "<rootDir>/src/utils/$1",
      "#tests/(.*)$": "<rootDir>/tests/$1"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "useESM": true
      }
    }
  },
  "scripts": {
    "start": "yarn && NODE_NO_WARNINGS=1 node src/app.js",
    "start:dev": "npm run build && cd ~/WebstormProjects/toys/server/dist && yarn && node src/app.js",
    "build": "tsc -p . && cp .env ./dist/.env && cp src/configs/server.pem ./dist/src/configs/server.pem && cp src/configs/server.key.pem ./dist/src/configs/server.key.pem",
    "dev": "nodemon --watch 'src/**/*.ts' --exec node --loader ts-node/esm src/app.ts",
    "test": "jest --detectOpenHandles --forceExit"
  },
  "imports": {
    "#src/*": "./src/*.js",
    "#bin/*": "./src/bin/*.js",
    "#configs/*": "./src/configs/*.js",
    "#loaders/*": "./src/loaders/*.js",
    "#datasources/*": "./src/datasources/*.js",
    "#models/*": "./src/models/*.js",
    "#repositories/*": "./src/repositories/*.js",
    "#routes/*": "./src/routes/*.js",
    "#controllers/*": "./src/controllers/*.js",
    "#services/*": "./src/services/*.js",
    "#jobs/*": "./src/jobs/*.js",
    "#utils/*": "./src/utils/*.js",
    "#tests/*": "./tests/*.js"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-validator": "^6.14.1",
    "firebase-admin": "^11.0.0",
    "http-errors": "^2.0.0",
    "image-size": "^1.0.1",
    "inversify": "^6.0.1",
    "ioredis": "^5.0.6",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "mongoose": "^6.4.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^2.3.3",
    "node-schedule": "^2.1.0",
    "nodemailer": "^6.7.5",
    "pretty-format": "^28.1.1",
    "qs": "^6.10.5",
    "reflect-metadata": "^0.1.13",
    "slash": "^4.0.0",
    "socket.io": "^4.5.1",
    "spdy": "^4.0.2",
    "underscore": "^1.13.4",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^28.1.2",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.0.0",
    "@types/node-schedule": "^2.1.0",
    "@types/nodemailer": "^6.4.4",
    "@types/spdy": "^3.4.5",
    "@types/underscore": "^1.11.4",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "nodemonConfig": {
    "ignore": [
      "*.json",
      "*.html",
      "*.test.js"
    ]
  },
  "private": true
}
